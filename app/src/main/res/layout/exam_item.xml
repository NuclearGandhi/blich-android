<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/exam_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop"
            android:src="@drawable/subject_math"/>

        <LinearLayout
            android:id="@+id/exam_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/exam_day"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:background="@drawable/ic_calendar_blank"
                android:gravity="center"
                android:paddingTop="8dp"
                android:text="24"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textSize="24sp"/>

            <TextView
                android:id="@+id/exam_month_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Jan 2017"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/black_text"
                android:textSize="18sp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/exam_subject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@id/exam_date"
            android:paddingTop="16dp"
            android:text="מתמטיקה"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="24sp"/>

        <TextView
            android:id="@+id/exam_teachers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/exam_subject"
            android:layout_toLeftOf="@id/exam_date"
            android:paddingTop="12dp"
            android:text="שלום אורלי"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>