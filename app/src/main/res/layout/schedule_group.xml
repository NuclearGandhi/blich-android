<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
                                             android:background="?attr/selectableItemBackground"
                                             android:paddingBottom="8dp"
                                             android:paddingEnd="16dp"
                                             android:paddingStart="16dp"
                                             android:paddingTop="8dp">

    <TextView
        android:id="@+id/schedule_group_hour"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:textColor="@color/white_text"
        android:textSize="20sp"
        android:background="@drawable/oval_accent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"/>

    <TextView
        android:id="@+id/schedule_group_subject"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="24dp"
        android:textColor="?android:textColorPrimaryInverse"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/schedule_group_classroom"
        app:layout_constraintStart_toEndOf="@+id/schedule_group_hour"
        app:layout_constraintTop_toTopOf="@+id/schedule_group_hour"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"/>

    <TextView
        android:id="@+id/schedule_group_teacher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="@+id/schedule_group_subject"
        app:layout_constraintTop_toBottomOf="@+id/space"
        tools:layout_conversion_absoluteHeight="19dp"
        tools:layout_conversion_absoluteWidth="0dp"
        tools:layout_conversion_absoluteX="272dp"
        tools:layout_conversion_absoluteY="35dp"/>


    <ImageView
        android:id="@+id/schedule_group_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rotation="0"
        android:src="@drawable/ic_expand_more_24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/schedule_group_subject"
        android:tint="?android:textColorPrimary"
        tools:ignore="ContentDescription"/>

    <TextView
        android:id="@+id/schedule_group_classroom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:ellipsize="none"
        android:visibility="visible"
        app:layout_constraintBaseline_toBaselineOf="@+id/schedule_group_subject"
        app:layout_constraintEnd_toStartOf="@+id/schedule_group_indicator"/>

    <LinearLayout
        android:id="@+id/schedule_group_events"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="6dp"
        android:layout_marginTop="4dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@+id/schedule_group_indicator"
        app:layout_constraintTop_toBottomOf="@+id/space">

    </LinearLayout>

    <Space
        android:id="@+id/space"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/schedule_group_subject"/>


</android.support.constraint.ConstraintLayout>